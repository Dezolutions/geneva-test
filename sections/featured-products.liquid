{{ 'featured-products.css' | asset_url | stylesheet_tag }}
{% style %}
.section-width {
  width: {{ section.settings.section_width }}%;
}
{% endstyle %}

<div class="section-width featured-products-section page-width">
  <h1>{{ section.settings.title | escape }}</h1>
  
  <ul id="main-feature-product-grid" data-id="{{ section.id }}" class="
    feature-products-grid
    grid-{{ section.settings.column_number_desktop }}-col-desktop
    grid-{{ section.settings.column_number_mobile }}-col-tablet">
    
    {% for block in section.blocks %}
      
       <li class="grid-item">
        {% render 'feature-product-card',
          product_card: block.settings.product,
          aspect-ratio: section.settings.aspect_ratio,
          custom-image: block.settings.custom_image,
          image-format: block.settings.image_format
        %}
      </li> 
    {% endfor %}
  </ul>
</div>

<script src="{{ 'feature-clip.js' | asset_url }}" defer="defer"></script>

{% schema %}
{
  "name": "Featured products",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Featured products",
      "label": "Section title"
    },
    {
      "type": "range",
      "id": "section_width",
      "label": "Section container width '%'",
      "min": 80,
      "max": 100,
      "step": 1,
      "default": 99
    },
    {
      "type": "range",
      "id": "column_number_desktop",
      "label": "Number of columns on desktop",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 4
    },
    {
      "type": "select",
      "id": "column_number_mobile",
      "label": "Number of columns on mobile",
      "options": [
        {
          "value": "1",
          "label": "1"
        },
        {
          "value": "2",
          "label": "2"
        }
      ],
      "default": "1"
    },
    {
      "type": "select",
      "id": "aspect_ratio",
      "options": [
        {
          "value": "1-1",
          "label": "1:1"
        },
        {
          "value": "16-9",
          "label": "16:9"
        },
        {
          "value": "4-3",
          "label": "4:3"
        },
        {
          "value": "3-4",
          "label": "3:4"
        }
      ],
      "default": "1-1",
      "label": "Image aspect ratio"
    }
  ],
  "blocks": [
    {
      "type": "product-block",
      "name": "Product Block",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        },
        {
          "type": "image_picker",
          "id": "custom_image",
          "label": "Custom image instead of featured image"
        },
        {
          "type": "select",
          "id": "image_format",
          "label": "Format of image container",
          "options": [
            {
              "value": "cover",
              "label": "cover"
            },
            {
              "value": "contain",
              "label": "contain"
            }
          ],
          "default": "contain"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured products",
      "blocks": [
        {
          "type": "product-block"
        },
        {
          "type": "product-block"
        },
        {
          "type": "product-block"
        },
        {
          "type": "product-block"
        }
      ]
    }
  ]
}
{% endschema %}